#!/bin/bash

# Update and install Nginx
sudo apt update
sudo apt install -y nginx

# Backup default configuration
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.backup

# Remove any existing /redirect_me block
sudo sed -i '/location \/redirect_me/,/}/d' /etc/nginx/sites-available/default

# Add the /redirect_me redirection block
sudo sed -i '/server {/a \\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-available/default

# Test and reload Nginx
sudo nginx -t && sudo systemctl reload nginx
